            bottom: 10px!important;
        }

        .shop-head{
            width: 100%;
            height: 2.8rem;
        }

        #shopNmae{
            font-size: 0.3rem;
            color: #fff;
            position: absolute;
            top: 0.2rem;
            right: 0.3rem;
            font-family: "Adobe 楷体 Std R";
        }
        .shopTop{
            height: 2.6rem;
            width: 100%;
            position: relative;
            overflow: hidden;
            background-size: 100%;
            /*background: red;*/
        }


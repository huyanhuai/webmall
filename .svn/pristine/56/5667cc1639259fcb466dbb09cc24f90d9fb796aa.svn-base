</main>
<!--底部-->
<footer>
    <ul class="foot">
        <li class="foot-item">
            <a href="index.html">
                <div class="foot-img">
                    <img src="static/img/index/homepage@2x.png" alt="">
                </div>
                <p class="foot-p">首页</p>
            </a>
        </li>
        <li class="foot-item">
            <a href="order.html">
                <div class="foot-img">
                    <img src="static/img/index/order2@2x.png" alt="">
                </div>
                <p class="foot-p active">订单</p>
            </a>
        </li>
        <li class="foot-item">
            <a href="representCenter.html">
                <div class="foot-img">
                    <img src="static/img/index/endorsement@2x.png" alt="">
                </div>
                <p class="foot-p">代言</p>
            </a>
        </li>
        <li class="foot-item">
            <a href="personalCenter.html">
                <div class="foot-img">
                    <img src="static/img/index/personal@2x.png" alt="">
                </div>
                <p class="foot-p">我的</p>
            </a>
        </li>
    </ul>

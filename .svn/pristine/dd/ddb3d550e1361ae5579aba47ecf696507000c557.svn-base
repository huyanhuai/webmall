//设置localStorage
function setLocal(name,val) {
    localStorage.setItem(name,val) //存储名字为name值为caibin的变量
}

//获取localStorage
function getLocal(name) {
    return localStorage.getItem(name);
}

//删除localStorage
function delLocal(name) {
    localStorage.removeItem(name); //undefined
}

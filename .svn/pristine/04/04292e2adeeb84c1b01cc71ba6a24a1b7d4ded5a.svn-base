.reservation-main {
    width: 100%;
    height: auto;
    overflow: hidden;
    margin-top: 0.24rem;
}

.product-name {
    height: 0.65rem;
    width: 100%;
    padding: 0 0.3rem;
    border-bottom: 0.01rem solid #e5e5e5;
    display: flex;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    font-size: 0.3rem;
    color: #494949;
    background: #fff;
}

.product-name > img {
    width: 0.28rem;
    height: 0.28rem;
    margin-right: 0.2rem;
}

.product-detail {
    width: 100%;
    height: 1.28rem;
    padding: 0.16rem 0.3rem;
    background: #fff;
}

.product-detail-left {
    width: 78%;
    float: left;
    height: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    display: -webkit-flex;
    -webkit-justify-content: space-between;
    -webkit-flex-direction: column;
}

.product-detail-left > p:nth-child(1) {
    font-size: 0.3rem;
    color: #494949;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.product-detail-left > p:nth-child(2) {
    font-size: 0.22rem;
    color: #919191;
    display: flex;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
}

.product-detail-left > p:nth-child(2) > img {
    display: inline-block;
    width: 0.24rem;
    height: 0.24rem;
    border-radius: 50%;
    margin-right: 0.1rem;
}

.product-detail-left > p:nth-child(2) > img:nth-child(2) {
    margin-left: 1rem;
}

#refund{
    margin-right: 0.2rem;
}

.product-detail-right {
    width: 22%;
    float: right;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
    font-size: 0.24rem;
    color: #919191;
}

.product-detail-right > span {
    color: #f79628;
}

.package-lay-number {
    width: 100%;
    height: 0.8rem;
    background: #fff;
    font-size: 0.28rem;
    padding: 0 0.3rem;
    display: flex;
    align-items: center;
    /*justify-content: space-between;*/
    display: -webkit-flex;
    -webkit-align-items: center;
    margin-top: 0.2rem;
    color: #919191;
}
.package-buynumber{
    margin-left: 0.5rem;
}

.package-lay-number > span {
    float: right;
    display: flex;
    align-items: center;
    justify-content: space-between;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: space-between;
}

.package-lay-number > span button {
    width: 0.5rem;
    height: 0.4rem;
    background-color: #eeeeee;
    font-size: 0.28rem;
    color: #696969;
}

.purchase-quantity {
    width: 0.5rem;
    height: 0.4rem;
    font-size: 0.28rem;
    color: #202020;
    text-align: center;
    background-color: #ffffff;
    border: solid 0.01rem #bfbfbf;
    display: flex;
    align-items: center;
    justify-content: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
}

.product-info {
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
    margin-top: 0.2rem;
}

.product-info-item {
    height: 0.8rem;
    border-bottom: 0.01rem solid #e5e5e5;
    padding-left: 0.3rem;
}

.product-info>.product-info-item:last-child {
    border-bottom: none;
}

.product-info-item .left {
    width: 20%;
    height: 100%;
    float: left;
    font-size: 0.26rem;
    color: #919191;
    display: flex;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
}

.product-info-item .right {
    width: 80%;
    height: 100%;
    float: left;
    font-size: 0.26rem;
    color: #919191;
    display: flex;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
}

.product-info-item .right input {
    width: 75%;
    height: 90%;
    float: left;
    font-size: 0.26rem;
    /*color: #919191;*/
    display: flex;
    align-items: center;
    display: -webkit-flex;
    -webkit-align-items: center;
}

.phoneBook {
    width: 25%;
    height: 90%;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
    border-left: 0.01rem solid #e5e5e5;
}

.phoneBook img {
    width: 0.34rem;
    height: 0.4rem;
}

.phone-quhao {
    height: 90%;
    padding-right: 0.2rem;
    border-right: 0.01rem solid #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
}
.pay-order{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 0.9rem;
    background: #fff ;
}
.pay-order-left{
    width: 60%;
    height: 100%;
    float: left;
    font-size: 0.28rem;
    color: #7a7a7a;
    padding-left: 0.3rem;
    line-height: 0.9rem;
}
.pay-order-left span{
    font-size: 0.4rem;
    color: #f79628;
}
.pay-order-right{
    width: 40%;
    float: left;
    height: 100%;
    background:#47bfc5 ;
    font-size: 0.36rem;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
}

input[type="text" i]:disabled,input[type="number" i]:disabled{
    background: #fff;
}